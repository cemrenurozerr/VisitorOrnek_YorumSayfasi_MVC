@model VisitorVM
<h2 class="text-center">Kullanıcı Yorumları</h2>
<hr />
<div class="accordion accordion-flush" id="accordionFlushExample" >
	@foreach (var item in Model.Visitors)
	{
		<div class="accordion-item">

			<h2 class="accordion-header">
				<button class="accordion-button collapsed bg-warning text-white" type="button" data-bs-toggle="collapse" data-bs-target="#yorum-@item.ID" aria-expanded="false" aria-controls="flush-collapseOne" >
					@item.Name - @item.CreatedDate
				</button>
			</h2>
			<div id="yorum-@item.ID" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample" aria-labelledby="flush-headingOne">
				<div class="accordion-body">
					@item.Comment
				</div>
			</div>

		</div>
	}
</div>
@if(TempData["result"]!=null)
{
	<div class="alert alert-success">
		<h3>@TempData["result"]</h3>
	</div>
}
<div class="row justify-content-center">
	<div class="col-6">
		<h3 class="text-center">Yeni Yorum Giriniz</h3>
		<form asp-action="Index" method="post">
			<div class="mt-3 mb-3">
				<label asp-for="@Model.Visitor.Name" class="form-label">Ad</label>
				<input type="text" asp-for="@Model.Visitor.Name" class="form-control" />
			</div> 
			<div class="form-floating mb-3">
				<textarea asp-for="@Model.Visitor.Comment" class="form-control" placeholder="Yorum" style="height:100px"></textarea>
				<label class="form-label" asp-for="@Model.Visitor.Comment">Yorum</label>
			</div>
			<button type="submit" class="btn btn-success">Yorum Yap</button>
		</form>
	</div>
</div>
